html
  head
    title= "修改密码"
    script(type='text/javascript')
        function checkpassword(){
                 var form=document.getElementById("listForm");
                 if(document.getElementById("password").value == null || document.getElementById("password").value == ''){
                        alert("新密码不能为空!");
                        return false;
                 }
                 if(document.getElementById("password1").value == null || document.getElementById("password1").value == ''){
                        alert("重输密码不能为空!");
                        return false;
                 }
                 if(document.getElementById("password").value !== document.getElementById("password1").value){
                        alert("两次密码输入不一样,请重输!");
                        return false;
                 }
                 form.submit();
        }
  body
    form(method="post", name="listForm",id="listForm", action="/api/member/forgot", margin-left="100px")
        fieldset 修改密码
              p: label 新 密 码:
                  input#password(type="password", name="password", value="")
              p: label 重输密码:
                  input#password1(type="password", name="password1", value="")
                  br/
                  input(type="button", value="确定", onclick="return checkpassword()")

